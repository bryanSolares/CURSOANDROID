<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EJEMPLO DE FRAGMENTS ESTATICOS"
        android:textSize="30sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/fragmentRojo"
            android:name="com.example.a64_usofragmentsestaticos.FragmentRojo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_fragment_rojo"
            android:layout_weight="4"/>

        <fragment
            android:id="@+id/fragmentVerde"
            android:name="com.example.a64_usofragmentsestaticos.FragmentVerde"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_fragment_verde"
            android:layout_weight="4"/>

    </LinearLayout>

</LinearLayout>