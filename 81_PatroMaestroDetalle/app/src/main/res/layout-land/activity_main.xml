<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">


    <fragment
        android:id="@+id/fragmentList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.patromaestrodetalle.Fragments.ListaPersonajesFragment"
        tools:layout="@layout/fragment_lista_personajes"
        android:layout_weight="2"/>


    <fragment
        android:id="@+id/fragmentDetalle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.patromaestrodetalle.Fragments.DetallePersonajesFragment"
        tools:layout="@layout/fragment_detalle_personaje"
        android:layout_weight="1"/>

</LinearLayout>